<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aldo.aget.testlistviewmulticolumnas.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/columna_18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorPrimaryDark"
        android:background="#e6e2e5"
        android:layout_weight="2"
        android:text="@string/columna_1" />

    <TextView
        android:id="@+id/columna_28"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#e6e2e5"
        android:layout_weight="1"
        android:text="@string/columna_2" />

    <TextView
        android:id="@+id/columna_38"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#e6e2e5"
        android:layout_weight="2"
        android:text="@string/columna_3" />

    <TextView
        android:id="@+id/columna_48"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#e6e2e5"
        android:shadowColor="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:text="@string/columna_4" />
</LinearLayout>